{
  "include": ["src/**/*"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
